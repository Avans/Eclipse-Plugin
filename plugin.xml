<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="LearnableProgramming.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="LearnableProgramming.commands.category"
            id="LearnableProgramming.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="LearnableProgramming.commands.sampleCommand"
            class="nl.avans.plugin.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="LearnableProgramming.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="LearnableProgramming.menus.sampleMenu">
            <command
                  commandId="LearnableProgramming.commands.sampleCommand"
                  mnemonic="S"
                  id="LearnableProgramming.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="LearnableProgramming.toolbars.sampleToolbar">
            <command
                  commandId="LearnableProgramming.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="LearnableProgramming.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.rulerColumns">
      <column
            class="nl.avans.plugin.AvansRulerColumn"
            enabled="true"
            global="true"
            id="LearnableProgramming.column1"
            includeInMenu="true"
            name="Avans">
         <targetClass class="org.eclipse.jdt.internal.ui.javaeditor.JavaEditor"></targetClass>
         <placement
               gravity="0.5">
         </placement>
      </column>
   </extension>
   
   <extension
         point="org.eclipse.jdt.core.compilationParticipant">
      <compilationParticipant
            class="nl.avans.plugin.AvansCompilationParticipant"
            id="Eclipse-Plugin.compilationParticipant1">
      </compilationParticipant>
   </extension>
</plugin>
